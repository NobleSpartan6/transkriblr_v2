{
  "manifest_version": 3,
  "name": "Tab Audio Transcriber",
  "version": "1.0",
  "description": "Captures and transcribes audio from browser tabs using AssemblyAI",
  "permissions": [
    "tabCapture",
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://api.assemblyai.com/*",
    "https://api.groq.com/*",
    "*://*/*"
  ],
  "action": {
    "default_popup": "window.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}